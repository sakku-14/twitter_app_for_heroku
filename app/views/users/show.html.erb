<div class="user-show">
  <div class="user-show-detail">
      <%= image_tag("/user_image/#{@user.image_name}") %>
      <p class="user-name"><%= @user.name %></p>
      <p class="user-email"><%= @user.email %></p>
      <% if @current_user.id == @user.id %>
        <%= link_to("編集","/users/#{@user.id}/edit") %>
      <% end %>
  </div>
  <div class="user-posts-index">
    <div class="select-content">
      <div class="select-posts">
        投稿
      </div>
      <div class="select-likes">
        <%= link_to("いいね!","/users/#{@user.id}/likes") %>
      </div>
    </div>
    <% @user.posts.each do |post|%>
    <div class="post">
      <div class="post-left">
        <%= image_tag("/user_image/#{post.user.image_name}") %>

      </div>
      <div class="post-right">
        <%= link_to(post.user.name,"/users/#{post.user.id}", class: "user-name") %>
        <br>
        <%= link_to(post.content,"/posts/#{post.id}", class: "post-content") %>
      </div>
    </div>
    <% end %>
  </div>
</div>
