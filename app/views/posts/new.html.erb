<div class="post-new">
  <div class="theme-new-group">
    <div class="theme-new">
      <h2>投稿する</h2>
    </div>
    <%= form_tag("/posts/new/create") do %>
    <div class="content-new">
      <% @post.errors.full_messages.each do |message| %>
        <div class="form-error">
          <%= message %>
        </div>
      <% end %>
      <textarea name="post" rows="4"><%= @post.content %></textarea>
      <input type="submit" value="新規投稿">
    </div>
    <% end%>
  </div>
</div>
